#:kivy 1.0.9

<PongBall>:
    size: 10, 10 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 25, 1000
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<Daylong>:
    size: 5,5
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball
    ball2: pong_ball2
    player1: player_left
    player2: player_right
    
